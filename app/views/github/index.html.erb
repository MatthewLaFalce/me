<div class="bg-base-100 grid w-full flex-grow gap-3 rounded-xl rounded-tl-none p-6 shadow-xl my-8">


  <div class="flex items-center space-x-2">
    <div class="online avatar mr-4">
      <div class="w-24 rounded-full ring ring-primary ring-offset-base-100 ring-offset-2">
        <img src="<%= @user.avatar_url%>" />
      </div>
    </div>
    <div>
      <p class="text-xl font-extrabold"><%= @user.name %></p>
      <%= link_to @user.login, @user.html_url, class: "text-base-content/70 text-lg"%>
      <p class="text-sm"><%= @user.bio %></p>
      <div class="grid grid-rows-1 grid-flow-col gap-4">
        <%= link_to "#{@user.followers} Followers", "#{@user.html_url}?tab=followers", class: "text-base-content/70 text-sm"%>
        <%= link_to "#{@user.following} Following", "#{@user.html_url}?tab=following", class: "text-base-content/70 text-sm"%>
      </div>
    </div>

  </div>
  <div class="divider text-base-content/60 m-0">Open Source Projects</div>

  <div class="columns-3">
    <% @projects.each do |project| %>


      <div class="card w-96 bg-base-100 shadow-xl m-4">
        <div class="card-body">
          <h2 class="card-title">
            <i class="fa-brands fa-github"></i>
            <%= link_to project.name, project.html_url %>
            <% unless project.language.blank? %>
              <div class="badge badge-sm <%= language_color(project.language) %>">
                <%= project.language %>
              </div>
            <% end %>
          </h2>
          <p> <%= project.description %></p>
          <div class="card-actions justify-center">
            <% project.topics.each do |topic| %>
              <div class="badge badge-outline"><%= topic %></div>
            <% end %>
          </div>
        </div>
      </div>


    <% end %>
  </div>


</div>
